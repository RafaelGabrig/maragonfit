# MaragonFit - Configuração de Produção

# Porta do servidor (pode ser alterada conforme necessário)
PORT=3000

# Ambiente de execução
NODE_ENV=production

# Configurações de segurança
SESSION_SECRET=maragonfit_super_secret_key_change_in_production

# Configurações de base de dados
DB_PATH=./server/database/maragonfit.db

# Configurações do sistema
SYSTEM_NAME=MaragonFit
COMPANY_NAME=Seu Ginásio
ADMIN_EMAIL=admin@seuginasio.com

# Configurações de capacidade padrão
DEFAULT_CLASS_CAPACITY=15
MAX_CLASS_CAPACITY=50

# Configurações de horários
BOOKING_HOURS_BEFORE=24
CANCELLATION_HOURS_BEFORE=2

# Configurações de segurança adicional
BCRYPT_SALT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24
